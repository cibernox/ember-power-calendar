<header class="main-header">
  <nav class="main-header-nav">
    <div class="main-header-nav-links">
      {{#link-to 'public-pages.docs' class="main-header-nav-link"}}Docs{{/link-to}}
      {{#link-to 'public-pages.cookbook' class="main-header-nav-link"}}Cookbook{{/link-to}}
      {{#link-to 'public-pages.addons' class="main-header-nav-link"}}Addons{{/link-to}}
      <a href="https://github.com/cibernox/ember-power-calendar" class="main-header-nav-link">Github</a>
    </div>
    <div class="main-header-logo">
      <a href={{href-to 'public-pages.index'}} class="home-link">
        <img src="/ember_logo.png" alt="ember">
        <strong>Power</strong>
        {{! template-lint-disable invalid-interactive }}
        <div class="header-calendar" onclick={{action "flipPage"}}>
          <div class="header-calendar-page {{if (eq day today) '' 'run-animation'}}">
            <sub class="calendar-page-number">{{format-date day 'D'}}</sub>
            Calendar
          </div>
          <div class="header-calendar-ring left"></div>
          <div class="header-calendar-ring right"></div>
        </div>
      </a>
    </div>
  </nav>
</header>
<div class="main-content">
  {{outlet}}
</div>
<footer class="main-footer">
  <div class="main-footer-content">
    Deployed with love by <a href="http://github.com/cibernox">Miguel Camba</a>
    <div class="contribute-call-to-action">
      Enjoy the addon? <a href={{href-to 'public-pages.support-the-project'}}>Support it!</a>
    </div>
  </div>
</footer>

{{remember-document-scroll key=applicationController.currentRouteName}}