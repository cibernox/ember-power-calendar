<PowerCalendar class="nav-with-number-input-demo" @center={{center3}} @onCenterChange={{action (mut center3) value="date"}} as |cal|>
  <cal.Nav>
    {{format-date cal.center "MMMM"}}
    <input type="number" min="1940" max="2020"
      value={{format-date cal.center "YYYY"}}
      oninput={{fn this.changeYear cal}}>
  </cal.Nav>

  <cal.Days/>
</PowerCalendar>
