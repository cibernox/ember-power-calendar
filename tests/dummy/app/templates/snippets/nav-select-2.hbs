{{#power-calendar class="nav-with-power-select-demo" center=center2 onCenterChange=(action (mut center2) value="date") as |cal|}}
  {{#cal.nav}}
    <PowerSelect @options={{months}}
      @selected={{format-date cal.center "MMMM"}}
      @matchTriggerWidth={{false}}
      @onChange={{action "changeCenter2" "month" cal}} as |month|>
      {{month}}
    </PowerSelect>
    <PowerSelect @options={{groupedYears}}
      @selected={{format-date cal.center "YYYY"}}
      @onChange={{action "changeCenter2" "year" cal}} as |year|>
      {{year}}
    </PowerSelect>
  {{/cal.nav}}

  {{cal.days}}
{{/power-calendar}}
