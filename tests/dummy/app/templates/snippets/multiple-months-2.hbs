<PowerCalendarRange
  class='multiple-month-power-calendar-vertical'
  @selected={{selected}}
  @onSelect={{action (mut selected) value="date"}} as |calendar|>
  <div class='months-container'>
    {{#each months as |month|}}
      <calendar.Nav>
        {{power-calendar-format-date month 'MMMM' locale=calendar.locale}}
      </calendar.Nav>
      <calendar.Days @center={{month}} @showDaysAround={{false}}/>
    {{/each}}
  </div>
</PowerCalendarRange>
