<PowerCalendar as |calendar|>
  <input type="radio" name="weekday" id="weekday-radio-button-1" value="1" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-1">Mon</label>
  <input type="radio" name="weekday" id="weekday-radio-button-2" value="2" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-2">Tue</label>
  <input type="radio" name="weekday" id="weekday-radio-button-3" value="3" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-3">Wed</label>
  <input type="radio" name="weekday" id="weekday-radio-button-4" value="4" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-4">Thu</label>
  <input type="radio" name="weekday" id="weekday-radio-button-5" value="5" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-5">Fri</label>
  <input type="radio" name="weekday" id="weekday-radio-button-6" value="6" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-6">Sat</label>
  <input type="radio" name="weekday" id="weekday-radio-button-0" value="0" {{on "change" this.onChange}}>
  <label for="weekday-radio-button-0">Sun</label>
  <calendar.Days @startOfWeek={{this.startOfWeek}}/>
</PowerCalendar>