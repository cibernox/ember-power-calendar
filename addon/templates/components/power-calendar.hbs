{{#with (assign publicAPI (hash
  nav=(component navComponent
    calendar=(readonly publicAPI)
    onCenterChange=(readonly onCenterChange)
  )
  days=(component daysComponent
    calendar=(readonly publicAPI)
    onSelect=(readonly onSelect)
  )
  months=(component monthsComponent
    calendar=(readonly publicAPI)
    onSelect=(readonly onSelect)
    onSelectQuarter=(readonly onSelectQuarter)
  )
)) as |calendar|}}
  {{#if hasBlock}}
    {{yield calendar}}
  {{else}}
    {{calendar.nav}}
    {{calendar.days}}
  {{/if}}
{{/with}}
