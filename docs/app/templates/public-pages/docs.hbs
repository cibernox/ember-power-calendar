      helpers</LinkTo>
    <LinkTo @route="public-pages.docs.api-reference" class="side-nav-link">API
      reference</LinkTo>
  </nav>
  <section class="doc-page">
    <PowerSelect
      @selected={{this.currentSection}}
      @options={{this.groupedSections}}
      @onChange={{this.visit}}
      @searchField="text"
      @triggerClass="section-selector"
      as |option|
    >
      {{option.text}}
    </PowerSelect>
    {{outlet}}
  </section>
</section>